# --- OpenRouter API (required) ---
OPENROUTER_API_KEY=sk-or-...

# --- Vortex Database (Thai Legal Documents) ---
VORTEX_DB_TYPE=mysql               # "mysql" or "json_files"
VORTEX_MYSQL_HOST=localhost
VORTEX_MYSQL_PORT=3306
VORTEX_MYSQL_USER=
VORTEX_MYSQL_PASS=
VORTEX_MYSQL_DB=
VORTEX_JSON_DIR=data/vortex        # Only used if VORTEX_DB_TYPE=json_files
VORTEX_MAX_CHUNKS=10               # Max legal document chunks per query

# --- WordPress Integration ---
WP_API_KEY=                        # Shared secret between WP plugin and backend
ALLOWED_ORIGINS=https://thailawonline.com,https://www.thailawonline.com

# --- Notion (optional) ---
NOTION_ENABLED=false
NOTION_API_KEY=
NOTION_DATABASE_ID=
